@article{adagolodjoRoboticInsertionFlexible2019,
  title = {Robotic {{Insertion}} of {{Flexible Needle}}
  in {{Deformable Structures Using Inverse Finite-Element Simulation}}},
  author = {Adagolodjo, Yinoussa and Goffin, Laurent and De Mathelin, Michel and Courtecuisse, Hadrien},
