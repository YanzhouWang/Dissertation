@article{leeMeasurementsSurgeonsExposure2012,
  title = {Measurements of {{Surgeons}}' {{Exposure}} to {{Ionizing Radiation Dose During Intraoperative Use}} of {{C-Arm Fluoroscopy}}},
  author = {Lee, Kisung and Lee, Kyoung Min and Park, Moon Seok and Lee, Boram and Kwon, Dae Gyu and Chung, Chin Youb},
  year = 2012,
  journal = {Spine},
  volume = 37,
  number = 14,
